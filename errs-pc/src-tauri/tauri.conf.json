{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RevoCat",
  "version": "0.1.1",
  "identifier": "com.alexcat.it.com",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "",
        "width": 1180,
        "height": 730,
        "transparent": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon_128x128@1x.png",
      "icons/icon_128x128@2x.png",
      "icons/icon_16x16@1x.png",
      "icons/icon_16x16@2x.png",
      "icons/icon_512x512@1x.png",
      "icons/icon_512x512@2x.png",
      "icons/icon_64.png"
    ]
  }
}
